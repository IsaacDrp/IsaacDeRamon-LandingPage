---
const jobs = [
  {
    role: "Software Development & Support Consultant",
    company: "Alpha Consultoría (ALCONSE)",
    period: "Feb 2025 - Presente",
    desc: "Consultoría estratégica para sector financiero y salud.",
    details: [
      "Soporte L2 predictivo para clientes internacionales (vía Infosys), utilizando análisis forense en Snowflake y SECDB.",
      "Diseño e implementación de un Sistema MCP (Model Context Protocol) con Spring Boot, basado en la arquitectura de alta concurrencia de Goldman Sachs (Legacy Modernization).",
      "Automatización de procesos operativos (jobs monitoring) reduciendo intervención manual."
    ]
  },
  {
    role: "Lead Developer & Founder",
    company: "Paydibujos (Proyecto Personal)",
    period: "2025",
    desc: "Plataforma de nicho para gestión de contenido visual.",
    details: [
      "Desarrollo Full Stack de una plataforma especializada.",
      "Implementación de pasarelas de pago y gestión de usuarios.",
      "Arquitectura optimizada para manejo de media y transacciones seguras."
    ]
  },
  {
    role: "Full Stack Developer",
    company: "Scholar & personal",
    period: "2023 - 2025",
    desc: "Desarrollo de soluciones a medida y HomeLab.",
    details: [
      "Colaboracion en proyecto SpringBoot: de 'El Zorro': Sistema desacoplado con Spring Boot y Angular.",
      "Infraestructura HomeLab: Hardening de servidores Linux, VPNs (OpenVPN/WireGuard) y despliegue nativo y con Docker.",
      "Sistemas de E-commerce con lógica compleja en Node.js."
    ]
  }
];
---

<section id="experiencia" class="section">
  <div class="container">
    <h2 class="mono-label" style="font-size: 1.5rem; margin-bottom: 2rem;">
      <span style="color: var(--accent)">03.</span> Experiencia & Proyectos
    </h2>

    <div style="border-left: 2px solid var(--border); padding-left: 2rem; margin-left: 0.5rem;">
      {jobs.map((job) => (
        <div style="margin-bottom: 3rem; position: relative;">
          <div style="position: absolute; left: -2.45rem; top: 5px; width: 12px; height: 12px; background: var(--bg-color); border: 2px solid var(--accent); border-radius: 50%;"></div>
          
          <h3 style="margin-bottom: 0.2rem; font-size: 1.2rem; color: white;">{job.role}</h3>
          <p style="color: var(--accent); font-family: var(--font-mono); font-size: 0.9rem; margin-bottom: 0.5rem;">
            {job.company} <span style="color: var(--text-muted); margin: 0 5px;">|</span> {job.period}
          </p>
          
          <p style="color: var(--text-main); font-style: italic; margin-bottom: 1rem;">{job.desc}</p>
          
          <ul style="list-style: none;">
            {job.details.map((item) => (
              <li style="margin-bottom: 0.5rem; color: var(--text-muted); font-size: 0.95rem; display: flex; align-items: start;">
                <span style="color: var(--accent); margin-right: 8px; margin-top: 4px;">▹</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>